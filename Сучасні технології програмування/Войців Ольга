import json
import os
from datetime import datetime

class Task:
    def __init__(self, title, description, status="New", created_at=None):
        self.title = title
        self.description = description
        self.status = status
        self.created_at = created_at if created_at else datetime.now().strftime("%Y-%m-%d %H:%M:%S")

    def to_dict(self):
        return {
            "title": self.title,
            "description": self.description,
            "status": self.status,
            "created_at": self.created_at
        }

    def mark_done(self):
        self.status = "Done"

    def __str__(self):
        return f"[{self.status}] {self.title} (Створено: {self.created_at})\n    Опис: {self.description}"


class TaskManager:
    def __init__(self, filename="tasks.json"):
        self.filename = filename
        self.tasks = self.load_tasks()

    def add_task(self, title, description):
        new_task = Task(title, description)
        self.tasks.append(new_task)
        self.save_tasks()
        print(f"Task '{title}' успішно додано!")

    def list_tasks(self):
        if not self.tasks:
            print("\nСписок завдань порожній.")
            return
        
        print(f"\Ваші завдання: ({len(self.tasks)}) ---")
        for index, task in enumerate(self.tasks, start=1):
            print(f"{index}. {task}")
            print("-" * 30)

    def complete_task(self, index):
        if 1 <= index <= len(self.tasks):
            task = self.tasks[index - 1]
            task.mark_done()
            self.save_tasks()
            print(f"Завдання '{task.title}' виконано!")
        else:
            print("Невірний номер завдання.")

    def save_tasks(self):
        tasks_data = [task.to_dict() for task in self.tasks]
        try:
            with open(self.filename, 'w', encoding='utf-8') as f:
                json.dump(tasks_data, f, indent=4, ensure_ascii=False)
        except IOError as e:
            print(f"Помилка при збереженні: {e}")

    def load_tasks(self):
        if not os.path.exists(self.filename):
            return []
        
        try:
            with open(self.filename, 'r', encoding='utf-8') as f:
                data = json.load(f)
                return [Task(**item) for item in data]
        except (json.JSONDecodeError, IOError):
            return []

def main():
    manager = TaskManager()

    while True:
        print("\n--- МЕНЮ ---")
        print("1. Додати завдання")
        print("2. Показати всі завдання")
        print("3. Відмітити як виконане")
        print("4. Вихід")
        
        choice = input("Ваш вибір: ")

        if choice == '1':
            title = input("Назва: ")
            desc = input("Опис: ")
            manager.add_task(title, desc)
        elif choice == '2':
            manager.list_tasks()
        elif choice == '3':
            manager.list_tasks()
            try:
                idx = int(input("Введіть номер завдання для виконання: "))
                manager.complete_task(idx)
            except ValueError:
                print("Будь ласка, введіть число.")
        elif choice == '4':
            print("До побачення!")
            break
        else:
            print("Невідома команда.")

if __name__ == "__main__":
    main()
